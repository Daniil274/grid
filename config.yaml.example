# Пример конфигурации AI системы
# Показывает как использовать API ключи

# Глобальные настройки
settings:
  default_agent: "coordinator"
  max_history: 15
  debug: true
  mcp_enabled: true
  working_directory: "."
  config_directory: "."
  allow_path_override: true

# Провайдеры API
providers:
  # LM Studio (локальный сервер)
  lm-studio:
    name: "lm-studio"
    base_url: "http://localhost:1234/v1"
    api_key: "lm-studio"  # Прямой API ключ
    timeout: 10000
    max_retries: 3
  
  # OpenAI
  openai:
    name: "OpenAI"
    base_url: "https://api.openai.com/v1"
    # Вариант 1: Переменная окружения (рекомендуется)
    api_key_env: "OPENAI_API_KEY"
    # Вариант 2: Прямой API ключ (не рекомендуется для безопасности)
    # api_key: "sk-your-api-key-here"
    timeout: 30
    max_retries: 2
  
  # Anthropic
  anthropic:
    name: "Anthropic"
    base_url: "https://api.anthropic.com"
    # Вариант 1: Переменная окружения (рекомендуется)
    api_key_env: "ANTHROPIC_API_KEY"
    # Вариант 2: Прямой API ключ (не рекомендуется для безопасности)
    # api_key: "sk-ant-your-api-key-here"
    timeout: 45
    max_retries: 2

# Модели
models:
  qwen3-8b:
    name: "qwen/qwen3-8b"
    provider: "lm-studio"
    temperature: 0.7
    max_tokens: 8000
    description: "Qwen 3 8b модель"

  gpt-4o:
    name: "gpt-4o"
    provider: "openai"
    temperature: 0.5
    max_tokens: 4000
    description: "GPT-4 Omni универсальная модель"

# Инструменты
tools:
  file_read:
    type: "function"
    name: "read_file"
    description: "Читает содержимое файла"
    prompt_addition: "Используй read_file(filepath) для чтения файлов."

# Промпты
prompt_templates:
  base: |
    Ты умный и дружелюбный AI помощник. Отвечай на русском языке кратко и по делу.

# Агенты
agents:
  assistant:
    name: "Помощник"
    model: "qwen3-8b"
    tools: ["file_read"]
    base_prompt: "base"
    description: "Базовый помощник для общения"

# Сценарии
scenarios:
  general:
    agent: "assistant"
    description: "Универсальные задачи"