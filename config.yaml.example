# Grid Agent System Configuration Example
# Copy this file to config.yaml and customize for your needs

# Global system settings
settings:
  default_agent: "coordinator"
  max_history: 15
  max_turns: 50  # Лимит ходов для агентов
  debug: false
  mcp_enabled: true
  working_directory: "."
  config_directory: "."
  allow_path_override: true

# AI Provider configurations
providers:
  openai:
    name: "OpenAI"
    base_url: "https://api.openai.com/v1"
    api_key_env: "OPENAI_API_KEY"
    timeout: 30
    max_retries: 2
  
  anthropic:
    name: "Anthropic"
    base_url: "https://api.anthropic.com"
    api_key_env: "ANTHROPIC_API_KEY"
    timeout: 45
    max_retries: 2

# AI Model configurations
models:
  gpt-4:
    name: "gpt-4"
    provider: "openai"
    temperature: 0.7
    max_tokens: 4000
    description: "GPT-4 for general tasks"
  
  claude-3:
    name: "claude-3-sonnet"
    provider: "anthropic"
    temperature: 0.3
    max_tokens: 4000
    description: "Claude 3 for coding and analysis"

# Tool configurations
tools:
  # File operations
  file_read:
    type: "function"
    name: "read_file"
    description: "Read file contents"
    prompt_addition: "Use read_file(filepath) to read files."
  
  file_write:
    type: "function"
    name: "write_file"
    description: "Write file contents"
    prompt_addition: "Use write_file(filepath, content) to write files."
  
  file_list:
    type: "function"
    name: "list_files"
    description: "List directory contents"
    prompt_addition: "Use list_files(directory) to list files."
  
  # Git operations
  git_status:
    type: "function"
    name: "git_status"
    description: "Show Git repository status"
    prompt_addition: "Use git_status(directory) to check Git status."
  
  git_commit:
    type: "function"
    name: "git_commit"
    description: "Create Git commit"
    prompt_addition: "Use git_commit(directory, message) to create commits."

# Agent configurations
agents:
  # Basic assistant
  assistant:
    name: "Assistant"
    model: "gpt-4"
    tools: []
    base_prompt: "base"
    description: "Basic conversational assistant"
  
  # File operations specialist
  file_agent:
    name: "File Agent"
    model: "gpt-4"
    tools: ["file_read", "file_write", "file_list"]
    base_prompt: "with_files"
    description: "Specialized in file operations"
  
  # Git operations specialist
  git_agent:
    name: "Git Agent"
    model: "gpt-4"
    tools: ["git_status", "git_commit", "file_read"]
    base_prompt: "with_git"
    description: "Git repository management specialist"
  
  # Coordinator agent
  coordinator:
    name: "Coordinator"
    model: "gpt-4"
    tools: ["file_agent", "git_agent"]
    base_prompt: "base"
    custom_prompt: |
      You are a coordinator that delegates tasks to specialized agents.
      Analyze user requests and route them to the appropriate agents.
    description: "Agent coordination and task delegation"

# Prompt templates
prompt_templates:
  base: |
    You are a helpful AI assistant. Provide clear, accurate responses.
  
  with_files: |
    You are a file operations specialist. You can read, write, and analyze files.
    Always check file existence before operations.
  
  with_git: |
    You are a Git operations specialist. You can manage repositories and version control.
    Always check repository status before making changes.

# Usage scenarios
scenarios:
  development:
    agent: "git_agent"
    description: "Software development and version control"
  
  file_management:
    agent: "file_agent"
    description: "File and document management"
  
  general:
    agent: "coordinator"
    description: "General task coordination"