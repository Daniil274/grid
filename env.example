# ============================================================================
# НАСТРОЙКИ ЛОГГИРОВАНИЯ
# ============================================================================

# Включение/выключение отладочного логгирования
DEBUG_LOGGING=true

# Уровень логгирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG

# Категории логгирования
LOG_AGENTS=true      # Логгирование агентов
LOG_TOOLS=true       # Логгирование инструментов
LOG_COMMUNICATIONS=true  # Логгирование коммуникаций
LOG_ERRORS=true      # Логгирование ошибок

# Файл логов (опционально, по умолчанию создается автоматически)
# LOG_FILE=logs/custom.log

# ============================================================================
# API КЛЮЧИ
# ============================================================================

# OpenAI API ключ
OPENAI_API_KEY=your_openai_api_key_here

# LM Studio API ключ (если требуется)
LM_STUDIO_API_KEY=your_lm_studio_api_key_here

# Anthropic API ключ
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Brave Search API ключ (для веб-поиска)
BRAVE_API_KEY=your_brave_api_key_here

# ============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ============================================================================

# Таймаут для API запросов (в секундах)
API_TIMEOUT=30

# Максимальное количество повторных попыток
MAX_RETRIES=3

# Рабочая директория по умолчанию
WORKING_DIRECTORY=C:/Users/daniil/Documents/agents 